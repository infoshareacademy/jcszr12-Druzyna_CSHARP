@using ProjectClock.BusinessLogic.Dtos.AccountDtos

@model DeleteAccountDto

<h1 class="text-center p-2">Delete an account</h1>

<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="delete" method="post">
            <div class="form-floating my-2">
                <input type="password" asp-for="@Model.Password" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.Password" class="form-label"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>           
            <div class="form-group mb-3">
                <input value="Delete" type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

