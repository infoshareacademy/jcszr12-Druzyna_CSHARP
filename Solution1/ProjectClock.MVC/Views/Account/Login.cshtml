@using ProjectClock.BusinessLogic.Dtos.AccountDtos
@model LoginDto
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container-fluid form-body m-0 py-5">
    <div class="container border-primary rounded-4 pt-2 text-white bg-opacity-25 bg-white col-lg-4">
        <h1 class="text-center pt-5">@ViewData["Title"]</h1>
        <div class="row justify-content-center text-center">
            <div class="col-auto my-4">
                <section>
                    @if(Model is not null && !Model.LoginWasSuccessful)
                    {
                        <p class="text-warning text-bg-warning p-1">Invalid password</p>
                    }                  
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating my-2 text-start">
                            <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating my-2 text-start">
                            <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="@Model.Password" class="form-label"></label>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox text-start">
                                <label asp-for="@Model.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="@Model.RememberMe" />
                                    <label asp-for="@Model.RememberMe" class="form-label"></label>
                                </label>
                            </div>
                        </div>



                        <div class="btn-group col-12" role="group">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary rounded-5 mx-3 ">Login</button>
                            <a asp-action="Register" class="w-100 btn btn-lg btn-outline-primary rounded-5 button mx-3">Register</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}