@model List<ProjectClock.BusinessLogic.Models.Project>

<h1 class="text-center p-2">Select project to delete</h1>

<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form action="Delete" method="post">
            <div class="form-group mb-3">
                <label for="name" class="control-label">Project</label>
                <select name="name" class="form-select form-select-lg">
                    @foreach (var project in @Model)
                    {
                        <option value="@project.Name">@project.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-3">
                <input value="Usuń" type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

