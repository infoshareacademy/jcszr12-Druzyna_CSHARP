@model List<ProjectClock.BusinessLogic.Models.User>

@{
    ViewData["Title"] = "Our hard working team";
}
<h1 class="text-center p-2">@ViewData["Title"]</h1>
<div class="container p-1">
    <div class="row justify-content-center">

        @foreach (var user in @Model)
        {
            var fileName = $"{user.Id}.jpg";
            <div class="col-xxl-2 col-md-6 p-2 ">

                <div class="card border-dark h-100 ">
                    <img class="card-img-top" src="~/jpg/@fileName" alt="our worker">
                    <div class="card-body">
                        <h5 class="card-title ">@user.Name @user.Surname</h5>
                        <p class="card-text ">@user.Name is hard working @user.UserPosition.ToString().ToLower()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


        
