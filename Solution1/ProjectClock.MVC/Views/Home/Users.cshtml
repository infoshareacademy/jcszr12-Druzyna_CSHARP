@model List<ProjectClock.BusinessLogic.Models.User>

@{
    ViewData["Title"] = "Our hard working team";
}
<h1>@ViewData["Title"]</h1>
<div class="container p-5">
    <div class="row justify-content-center">

        @foreach (var user in @Model)
        {
            var fileName = $"{user.Id}.jpg";
            <div class="col-lg-2 col-md-6 ">

                <div class="card border-dark h-100 ">
                    <img class="card-img-top" src="~/jpg/@fileName" alt="our worker">
                    <div class="card-body">
                        <h5 class="card-title text-light-emphasis">@user.Name @user.Surname</h5>
                        <p class="card-text text-light-emphasis">@user.Name is hard working @user.UserPosition.ToString().ToLower()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


        
