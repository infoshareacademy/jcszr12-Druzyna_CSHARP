@{
    var list = ProjectClock.BusinessLogic.Services.WorkingTimeRecorder.WorkingTimeRecorder.AllProjectsOpenedByUser(5);
    var isWorking = true;
    var isOrganisationOwner = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectClock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectClock.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <div class="container-fluid p-4 ">
        <ul class="flex-column">
            @if (isWorking)
            {
                <li class="list-group-item col-lg bg-white bg-opacity-25 rounded-2 p-1 m-1 box-shadow">
                    <div class="container">

                        <div class="row justify-content-center ">
                            <div class="row-md-4">
                                <form action="/Project/Stop" method="post">
                                    <div class="row mb-3">
                                        <label for="name" class="control-label">Project</label>
                                        <select name="name" class="form-select form-select-lg">
                                            @foreach (var project in list)
                                            {
                                                <option value="@project.ProjectID">@project.ProjectID</option>
                                            }
                                        </select>
                                    </div>
                                    <div class=" row mb-3">
                                        <input value="Stop" type="submit" class="btn btn-primary">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </li>
            }
            
            <li class="list-group-item col-lg bg-white bg-opacity-25 rounded-2 m-1 p-2 box-shadow">
                <div class="row">
                    <ul class="col-lg-2 nav flex-column box-shadow m-1 p-1 b-0">
                        <li class="list-group-item text-center m-1 p-1"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-clock fs-1 text-center"></i>   Project Clock</a></li>
                        <li class="list-group-item text-start  px-2 py-0 " style="max-width: 100%">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternal aria-expanded="false" aria-label="Toggle navigation">
                                <span class="d-sm-none navbar-toggler-icon">
                                    <i class="bi bi-card-list fs-3"></i>
                                </span>
                            </button>
                        </li>
                        <li class="list-group-item m-0 p-1 text-sm-center table-responsive-sm">
                            <div id="navbarToggleExternalContent" class="navbar-collapse collapse d-sm-inline-flex ">
                                <ul class="navbar-nav flex-grow-1 p-1">
                                    <li class="nav-item ">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item ">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Organization" asp-action="Index">Organizations</a>
                                    </li>

                                    @if (isOrganisationOwner)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-white" asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
                                        </li>                                       
                                        <li class="nav-item">
                                            <a class="nav-link text-white" asp-area="" asp-controller="Raport" asp-action="Index">Raports</a>
                                        </li>
                                    }                                   
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Users">Users</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>





                    <div class="col-lg rounded-2 m-1 box-shadow">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </li>

        </ul>



    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProjectClock.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
