@model ProjectClock.Database.Entities.Organization

<style>
    .transparent-border {
        border: 2px solid rgba(0, 74, 122, 0.05);
        padding: 10px; 
    }

    .column-spacing {
        margin-right: 4px; /* Możesz dostosować wielkość odstępu według potrzeb */
    }
</style>

<h1 class="fw-bold mb-4 text-center">Create organization</h1>

<div class="container-lg">
    <div class="row">
        <div class="col-md-3 transparent-border mx-auto">
            @using (Html.BeginForm("Create", "Organization", FormMethod.Post))
            {
                <div class="mb-2"> 
                    <label for="organizationName" class="form-label">Create new organization</label>
                    <input type="text" name="Name" class="form-control form-control-sm" id="Name" placeholder="Type name here">
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Create</button> 
            }
        </div>
    </div>
</div>