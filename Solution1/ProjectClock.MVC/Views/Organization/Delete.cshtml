@model ProjectClock.BusinessLogic.Dtos.Organization.DeleteOrganizationDto
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<style>
    .transparent-border {
        border: 2px solid rgba(0, 74, 122, 0.05);
        padding: 10px;
    }

    .column-spacing {
        margin-right: 4px;
    }
</style>

<h1 class="fw-bold mb-4 text-center">Delete organization</h1>

<div class="container-lg">

    <div class="row">
        <div class="col-md-3 col-3 mb-3 transparent-border col-md-3 transparent-border mx-auto" id="organizationSelect">
            <form asp-controller="Organization" asp-action="Delete" method="post">
                <label for="selectedOrganization">Choose organization to delete</label>
                <select class="form-select form-select-sm" aria-label="Small select example" id="selectedOrganization" name="organizationId">
                    @{
                        foreach (var organization in Model.Organizations)
                        {
                            <option value="@organization.Id">@organization.Name</option>
                        }
                    }
                </select>
                <button type="submit" class="btn btn-outline-secondary text-center m-1">Delete</button>
            </form>
        </div>
    </div>

</div>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success" role="alert">
        @successMessage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
