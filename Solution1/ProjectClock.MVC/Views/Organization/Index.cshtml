@model List<ProjectClock.Database.Entities.Organization>

<style>
    .transparent-border {
        border: 2px solid rgba(255, 255, 255, 0.4);
        padding: 10px; 
    }
</style>

<h1 class="fw-bold mb-4 text-center">Organization management</h1>

<div class="container-lg">
    <div class="row">
        <div class="col-md-3 transparent-border">
            @using (Html.BeginForm("Create", "Organization", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="organizationName" class="form-label">Create new organization</label>
                    <input type="text" name="Name" class="form-control" id="Name" aria-describedby="organizationHelp">
                    <div id="organizationHelp" class="form-text">Put organization name here</div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            }
        </div>
    </div>
    <br />

    <div class="row">

        <div class="col-md-3 transparent-border">
            Choose your organization
        </div>

        <div class="col-md-3 transparent-border">
            Invite to organization
        </div>

        <div class="col-md-3 transparent-border">
            Hired people
        </div>

        <div class="col-md-3 transparent-border">
            Manage users
        </div>

    </div>
    
    <br/>
    
    <div class="row">

        <div class="col-md-3 transparent-border">
            Your invitations
        </div>

    </div>
</div>

<br/>

@{
    foreach (var organization in Model)
    {
        <p> Id: @organization.Id Name: @organization.Name</p>
    }
}